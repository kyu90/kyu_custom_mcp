{
    "mcpServers": {
        "file_manager": {
            "command": "python",
            "args": [
                "mcp_server_file_manager.py"
            ],
            "env": {
                "BASE_PATH": "./"
            }
        },
        "sequential-thinking": {
            "command": "npx",
            "args": [
                "-y",
                "@modelcontextprotocol/server-sequential-thinking"
            ]
        },
        "everything": {
          "command": "npx",
            "args": [
            "-y",
           "@modelcontextprotocol/server-everything"
            ]
        },
        "perplexity-ask": {
          "command": "npx",
          "args": [
            "-y",
            "server-perplexity-ask"
          ],
          "env": {
            "PERPLEXITY_API_KEY": "YOUR_API_KEY"
          }
        }
    }
}
